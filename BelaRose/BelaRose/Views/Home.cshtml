@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<ContentModels.Home>
@using ContentModels = Umbraco.Web.PublishedContentModels;
@{
	Layout = "BelaRoseMaster.cshtml";
}

  <!-- Video Header -->
<div class="header-video" style="background-image: url('@Umbraco.Media(CurrentPage.BackgroundImage).Url')">
    <video autoplay muted loop>
        <source src="~/videos/index_video.mp4" type="video/mp4">
        <source src="~/videos/index_video.ogg" type="video/ogg">
        <!-- Video Cover image by CSS -->
    </video>
    <div class="video-wrapper">
        <!-- Video Title -->
        <h1 class="video-title">@CurrentPage.H1Tag</h1>
    </div>
</div>
<!-- /video header ends-->

@if (@CurrentPage.isCTAEnabled)
{
<!-- Call to Action Section -->
<section id="call-to-action" class="color-section small-section">
    <div class="container wow fadeInUp">
        <div class="col-lg-7 col-lg-offset-4 col-md-7 col-md-offset-4">
            <div class="text-center">
                <h4>@CurrentPage.CTATitle</h4>
                <p>@CurrentPage.CTAText</p>
                <!-- Button -->
                <div class="page-scroll">
                    <a class="btn" href="#contact">@CurrentPage.CTAButtonText</a>
                </div>
            </div>
            <!-- /text-center -->
        </div>
        <!-- /col-lg-7-->
    </div>
    <!-- /container-->
</section>
<!-- Section call-to-action Ends-->
}


@if (@CurrentPage.isServicesEnabled)
{
<!-- Section Services -->
<section id="services">
    <div class="container">
        <div class="col-md-6 col-lg-6">
            <!-- Section heading -->
            <div class="section-heading">
                <h2 class="text-left">@CurrentPage.ServicesTitle</h2>
            </div>
            <!-- main text -->
            <h3>@CurrentPage.ServicesSubTitle</h3>
            <p>
               @CurrentPage.ServicesContent
            </p>
        </div>
        <!-- /col-md-6-->
    </div>
    <!-- /container -->
    <!-- Services Accordion Stars-->
    <ul class="container-fluid accordion-group" id="accordion">

        @{
            var ServiceList = CurrentPage.ServicePanels.ToString().Split(new string[] { "," }, StringSplitOptions.RemoveEmptyEntries);
            var ServiceCollection = Umbraco.Content(ServiceList);

            foreach (var item in ServiceCollection)
            {
                            <!-- Panel 1 -->
                <!-- Accordion item1-->
                if (item.IsFirst)
                {
                    @:<li class="out">
                        }
                        else
                        {
                        @:<li>
                        }

                        <div class="accordion-overlay"></div>
                        <h4>@item.Title</h4>
                        <div class="hidden-xs">
                            <article>
                                <h6>@item.SubHeading</h6>
                                <p>@item.Content</p>
                            </article>
                        </div>
                    @:</li>
                }

            }

    </ul>
    <!-- /Accordion ends -->
</section>
}


@if (@CurrentPage.isAboutEnabled)
{
<!-- /Section Services ends -->
<!-- Section About -->
<section id="about">
    <div class="container">
        <!-- Row -->
        <div class="row margin-about">
            <div class="col-lg-7 col-sm-12">
                <!-- Section heading -->
                <div class="section-heading">
                    <h2 class="text-left">@CurrentPage.AboutTitle</h2>
                </div>
                <h3>@CurrentPage.AboutSubTitle</h3>
                <p>
                    @CurrentPage.AboutContent
                </p>
            </div>
            <!-- Diamond, image though CSS -->
            <div class="wow fadeInUp">
                <div class="diamond">
                    <div class="square">
                        <div class="pic">
                        </div>
                    </div>
                </div>
            </div>
            <!-- wow fade -->
        </div>
        <!-- /row -->
        <!-- row stars -->
        <div class="row">
            <div class="col-md-7">
                <!-- Image Carousel -->
                <div id="owl-about" class="owl-carousel">
                    @{
                        var BlogList = CurrentPage.AboutCarousel1.ToString().Split(new string[] { "," }, StringSplitOptions.RemoveEmptyEntries);
                        var BlogCollection = Umbraco.Content(BlogList);

                        foreach (var item in BlogCollection)
                        {
                            <img src="@Umbraco.Media(item).Url" alt="">
                        }
                    }
                </div>
            </div>
            <!-- /col-md-7 -->
            <div class="col-md-5">
                <!-- ACCORDION ROW -->
                <div class="panel-group" id="accordion2">
                    @{
                        var PanelList = CurrentPage.AboutPanels.ToString().Split(new string[] { "," }, StringSplitOptions.RemoveEmptyEntries);
                        var PanelCollection = Umbraco.Content(PanelList);

                        foreach (var item in PanelCollection)
                        {
                            string idstring = "collapse" + item.Id;
                            string classString = item.IsFirst ? "panel-collapse collapse in" : "panel-collapse collapse";
                            <!-- Panel 1 -->
                            <div class="panel">
                                <div class="panel-heading">
                                    <h6 class="panel-title">
                                        <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#@idstring">@item.Title</a>
                                    </h6>
                                </div>

                                <div id="@idstring" class="@classString">
                                    <div class="panel-body">
                                        <p>@item.Content</p>
                                    </div>
                                </div>
                            </div>
                        }

                    }
                </div>
                <!-- /panel-group -->
            </div>
            <!-- /col-md-5 -->
        </div>
        <!--/row -->
    </div>
    <!--/container-->
</section>
<!--/ Section About ends -->
}

