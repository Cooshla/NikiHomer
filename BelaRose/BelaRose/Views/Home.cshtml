@inherits Vega.USiteBuilder.UmbracoTemplatePageBase<BelaRose.DocumentType.Home>
@{
    Layout = "~/views/BelaRoseMaster.cshtml";
}
<!-- Video Header -->
<div class="header-video" style="background-image: url('@Umbraco.Media(Model.BackgroundImage).Url')">
    <video autoplay muted loop>
        <source src="~/videos/index_video.mp4" type="video/mp4">
        <source src="~/videos/index_video.ogg" type="video/ogg">
        <!-- Video Cover image by CSS -->
    </video>
    <div class="video-wrapper">
        <!-- Video Title -->
        <h1 class="video-title">@Model.H1Tag</h1>
    </div>
</div>
<!-- /video header ends-->


    <!-- Call to Action Section -->
    <section id="call-to-action" class="color-section small-section">
        <div class="container wow fadeInUp">
            <div class="col-lg-7 col-lg-offset-4 col-md-7 col-md-offset-4">
                <div class="text-center">
                    <h4>@Model.CTATitle</h4>
                    <p>@Model.CTAText</p>
                    <!-- Button -->
                    <div class="page-scroll">
                        <a class="btn" href="#contact">@Model.CTAButtonText</a>
                    </div>
                </div>
                <!-- /text-center -->
            </div>
            <!-- /col-lg-7-->
        </div>
        <!-- /container-->
    </section>
    <!-- Section call-to-action Ends-->




    <!-- Section Services -->
    <section id="services">
        <div class="container">
            <div class="col-md-6 col-lg-6">
                <!-- Section heading -->
                <div class="section-heading">
                    <h2 class="text-left">@Model.ServicesTitle</h2>
                </div>
                <!-- main text -->
                <h3>@Model.ServicesSubTitle</h3>
                <p>
                    @Model.ServicesContent
                </p>
            </div>
            <!-- /col-md-6-->
        </div>
        <!-- /container -->
        <!-- Services Accordion Stars-->
        <ul class="container-fluid accordion-group" id="accordion">

            @{
                var ServiceList = Model.ServicePanels.ToString().Split(new string[] { "," }, StringSplitOptions.RemoveEmptyEntries);
                var ServiceCollection = Umbraco.Content(ServiceList);

                foreach (var item in ServiceCollection)
                {
                            <!-- Panel 1 -->
                <!-- Accordion item1-->
                    if (item.IsFirst)
                    {
                        @:<li class="out">
                    }
                    else
                    {
                        @:<li>
                        }

                    <div class="accordion-overlay"></div>
                        <h4>@item.Title</h4>
                        <div class="hidden-xs">
                            <article>
                                <h6>@item.SubHeading</h6>
                                <p>@item.Content</p>
                            </article>
                        </div>
                        @:</li>
                }

            }

        </ul>
        <!-- /Accordion ends -->
    </section>
                

    <!-- /Section Services ends -->
    <!-- Section About -->
    <section id="about">
        <div class="container">
            <!-- Row -->
            <div class="row margin-about">
                <div class="col-lg-7 col-sm-12">
                    <!-- Section heading -->
                    <div class="section-heading">
                        <h2 class="text-left">@Model.AboutTitle</h2>
                    </div>
                    <h3>@Model.AboutSubTitle</h3>
                    <p>
                        @Model.AboutContent
                    </p>
                </div>
                <!-- Diamond, image though CSS -->
                <div class="wow fadeInUp">
                    <div class="diamond">
                        <div class="square">
                            <div class="pic">
                            </div>
                        </div>
                    </div>
                </div>
                <!-- wow fade -->
            </div>
            <!-- /row -->
            <!-- row stars -->
            <div class="row">
                <div class="col-md-7">
                    <!-- Image Carousel -->
                    <div id="owl-about" class="owl-carousel">
                        @{
                            var BlogList = Model.AboutCarousel1.ToString().Split(new string[] { "," }, StringSplitOptions.RemoveEmptyEntries);
                            var BlogCollection = Umbraco.Content(BlogList);

                            foreach (var item in BlogCollection)
                            {
                                <img src="@Umbraco.Media(item).Url" alt="">
                            }
                        }
                    </div>
                </div>
                <!-- /col-md-7 -->
                <div class="col-md-5">
                    <!-- ACCORDION ROW -->
                    <div class="panel-group" id="accordion2">
                        @{
                            var PanelList = Model.AboutPanels.ToString().Split(new string[] { "," }, StringSplitOptions.RemoveEmptyEntries);
                            var PanelCollection = Umbraco.Content(PanelList);

                            foreach (var item in PanelCollection)
                            {
                                string idstring = "collapse" + item.Id;
                                string classString = item.IsFirst ? "panel-collapse collapse in" : "panel-collapse collapse";
                            <!-- Panel 1 -->
                                <div class="panel">
                                    <div class="panel-heading">
                                        <h6 class="panel-title">
                                            <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#@idstring">@item.Title</a>
                                        </h6>
                                    </div>

                                    <div id="@idstring" class="@classString">
                                        <div class="panel-body">
                                            <p>@item.Content</p>
                                        </div>
                                    </div>
                                </div>
                            }

                        }
                    </div>
                    <!-- /panel-group -->
                </div>
                <!-- /col-md-5 -->
            </div>
            <!--/row -->
        </div>
        <!--/container-->
    </section>
    <!--/ Section About ends -->




    <!-- Section Prices -->
    <section id="prices">
        <div class="container">
            <!-- Section Heading -->
            <div class="section-heading">
                <h2>@Model.PricesTitle</h2>
            </div>

            <!-- Price tabs Start -->
            <div class="tabbable">
                <div class="tab-content col-lg-10 col-centered">

                    <div class="tab-pane active in fade" id="tab2">
                        <div class="row">
                            <!-- Menu: Skin & Body -->
                            <div class="col-md-12">
                                <!-- image -->
                                <img class="img-responsive" src="img/price2.jpg" alt="">
                                <h3>@Model.ListTitle</h3>
                            </div>
                            <div class="col-md-6">
                                <!-- menu body -->
                                <div class="menu-body">
                                    <div class="menu-section">



                                        @{
                                            var PriceList = Model.PriceList.ToString().Split(new string[] { "," }, StringSplitOptions.RemoveEmptyEntries);
                                            var PriceCollection = Umbraco.Content(PriceList);

                                            foreach (var item in PriceCollection)
                                            {

                                    <!-- Item starts -->
                                                <div class="menu-item">
                                                    <div class="menu-item-name">
                                                        @item.Title
                                                    </div>
                                                    <div class="menu-item-price">
                                                        @item.SubHeading
                                                    </div>
                                                    <div class="menu-item-description">
                                                        <p>@item.Content</p>
                                                    </div>
                                                </div>
                                    <!-- Item ends -->


                                            }
                                        }

                                    </div>
                                    <!--/ menu section -->
                                </div>
                                <!-- / menu body -->
                            </div>
                            <!-- /col-md-6 -->
                            <!-- second column -->
                            <div class="col-md-6">
                                <div class="menu-body">
                                    <div class="menu-section">
                                        @{
                                            var PriceList2 = Model.PriceList2.ToString().Split(new string[] { "," }, StringSplitOptions.RemoveEmptyEntries);
                                            var PriceCollection2 = Umbraco.Content(PriceList2);

                                            foreach (var item in PriceCollection2)
                                            {

                                    <!-- Item starts -->
                                                <div class="menu-item">
                                                    <div class="menu-item-name">
                                                        @item.Title
                                                    </div>
                                                    <div class="menu-item-price">
                                                        @item.SubHeading
                                                    </div>
                                                    <div class="menu-item-description">
                                                        <p>@item.Content</p>
                                                    </div>
                                                </div>
                                    <!-- Item ends -->


                                            }
                                        }
                                    </div>
                                    <!--/ menu section -->
                                </div>
                                <!-- / menu body -->
                            </div>
                            <!-- /col-md-6 -->
                        </div>
                        <!-- /.row -->
                    </div>

                </div>
                <!--tab-content-->
            </div>
            <!--tababble-->
        </div>
        <!-- /container -->
    </section>
    <!-- /Section Prices ends -->
                                            


    <!-- Section Gallery -->
    <section id="gallery" class="gray-section">
        <div class="container-fluid">
            <!-- Section heading -->
            <div class="section-heading">
                <h2>@Model.GalleryTitle</h2>
            </div>

            <!-- Gallery -->
            <div class="row">
                <div class="col-md-12 wow fadeInUp">
                    <div id="lightbox">

                        @{
                            var ImageList = Model.Images.ToString().Split(new string[] { "," }, StringSplitOptions.RemoveEmptyEntries);
                            var ImageCollection = Umbraco.Content(ImageList);

                            foreach (var item in ImageCollection)
                            {
                                <div class="bodywellbeing col-lg-4 col-sm-6 col-md-6">
                                    <div class="isotope-item">
                                        <div class="gallery-thumb">
                                            <img class="img-responsive" src="@Umbraco.Media(item).Url" alt="">
                                            <a href="@Umbraco.Media(item).Url" data-gal="prettyPhoto[gallery]" title="You can add caption to pictures.">
                                                <span class="overlay-mask"></span>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                    <!-- /lightbox-->
                </div>
                <!-- /col-md-12-->
            </div>
            <!-- /row -->
        </div>
        <!-- /container -->
    </section>
    <!-- Section Gallery ends -->




<!-- Section Contact -->
<section id="contact">
    <div class="container">
        <!-- Section heading -->
        <div class="section-heading">
            <h2>Contact us</h2>
        </div>
        <!-- Contact -->
        <div class="col-lg-9 col-centered text-center">
            <h3>Make an Appointment</h3>
            <p>@Model.ContactBlurb</p>
            <!-- Form Starts -->
            <div id="contact_form">
                <!-- form results -->
                <div id="contact_results"></div>
                <!-- Form Starts -->
                <div class="form-group">
                    <div class="col-lg-6">
                        <input type="text" name="name" class="col-lg-6 form-control input-field" placeholder="Name" required="">
                    </div>
                    <div class="col-lg-6">
                        <input type="email" name="email" class="form-control input-field" placeholder="Email ID" required="">
                    </div>
                    <div class="col-lg-6">
                        <input type="text" name="service" class="form-control input-field" placeholder="Service" required="">
                    </div>
                    <div class="col-lg-6">
                        <div class="input-group date" id="datetimepicker1">
                            <input type="text" name="date" class="form-control input-field" placeholder="Date and Time" required="" />
                            <span class="input-group-addon">
                                <span class="fa fa-calendar"></span>
                            </span>
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <textarea name="message" id="message" class="textarea-field form-control" rows="4" placeholder="Enter your message" required=""></textarea>
                        <button type="submit" id="submit_btn" value="Submit" class="btn center-block">Send message</button>
                    </div>
                </div>
                <!-- /Form group-->
            </div>
            <!--/Contact form -->
        </div>
        <!--/col-lg-9 -->
    </div>
    <!-- /container-->
</section>
<!--Section Contact ends -->


    <!--Section Info -->
    <section id="info" class="small-section">
        <div class="container">
            <div class="col-lg-6 col-md-6 col-centered text-center">
                <div class="well wow fadeInUp">
                    <h5>Information</h5>
                    <!-- contact info -->
                    <div class="contact-info">
                        <p><i class="fa fa-envelope"></i><a href="@Model.InfoEmail">@Model.InfoEmail</a></p>
                        <p><i class="fa fa-phone margin-icon"></i>Call Us @Model.InfoPhone</p>
                    </div>
                    <!-- address info -->
                    <p>We are located at @Model.InfoAddress.</p>
                    <!-- Map -->
                    <div id="map-canvas"></div>
                    <!-- Newsletter -->
                    <h5>our Newsletter</h5>
                    <p>We will send updates once a week.</p>

                    <!-- Newsletter Form -->
                    <div id="mc_embed_signup">
                        <!-- Your form adress in the line bellow -->
                        <form action="//yourlist.us12.list-manage.com/subscribe/post?u=1111" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
                            <div id="mc_embed_signup_scroll">
                                <div class="mc-field-group">
                                    <div class="input-group">
                                        <input class="form-control input-lg required email" type="email" value="" name="EMAIL" placeholder="Your email here" id="mce-EMAIL">
                                        <span class="input-group-btn">
                                            <button type="submit" value="Subscribe" name="subscribe" id="mc-embedded-subscribe" class="btn">Subscribe</button>
                                        </span>
                                    </div>
                                    <!-- Subscription results -->
                                    <div id="mce-responses" class="mailchimp">
                                        <div class="alert alert-danger response" id="mce-error-response"></div>
                                        <div class="alert alert-success response" id="mce-success-response"></div>
                                    </div>
                                </div>
                                <!-- /mc-fiel-group -->
                            </div>
                            <!-- /mc_embed_signup_scroll -->
                        </form>
                        <!-- /form ends -->
                    </div>
                    <!-- /mc_embed_signup -->
                </div>
                <!-- /well -->
            </div>
            <!-- /col-lg-6-->
        </div>
        <!--/container -->
    </section>
    <!-- /Section Info ends -->
